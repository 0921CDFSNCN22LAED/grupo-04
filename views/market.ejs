<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/Head") %>
    <link rel="shortcut icon" href="/images/calamar_png.svg">
  </head>
  <body class="bg_secondary">

    <!-- inicio barra de navegacion -->
    <header><%- include("./partials/NavBar") %></header>

    <script>
      document.querySelector('#search-bar').classList.remove('d-none');
    </script>

<!-- fin barra de navegacion -->

<!-- inicio contenido principal -->

    <main class="container body-container">
      <section class="">
        <div>
          <h2>Welcome to Calamarket!</h2>
          <p>Discover the art of the future, welcome to a new age!</p>

          <!-- inicio boton categorias -->
          <div class="dropend mt-2 d-flex justify-content-start">
          <button class="design-btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">CATEGORIAS</button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="#">Accion</a></li>
            <li><a class="dropdown-item" href="#">Anime</a></li>
            <li><a class="dropdown-item" href="#">Otra categoria</a></li>
          </ul>
          </div>
        </div>
         <!-- fin boton categorias -->

         <!--inicio mas vistos -->
        <h2 class="mt-3 mb-5">Mas vistos</h2>
        <section class="container-xxl sec-product d-flex flex-column-xs flex-wrap row-xxl justify-content-center">
  
        <% for(let card of listCards){ %>   
          <!-- inicio articulo -->
           <div class="card mb-3 mx-3 shadow col-xxl" style="width: 18rem;">
            <img src="<%= card.img %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"> <%= card.name %> </h5>
              <p class="card-text"> <%= card.desc %> </p>
              <div class="d-flex justify-content-between">
                <a href=""><i class="fas fa-cart-plus"></i></a>
                <!-- modal detalle producto -->
                <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#modalArt<%= card.id %>">
                  VER
                </button>
                <!-- Modal -->
                <div class="modal fade" id="modalArt<%= card.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Detalle: <%= card.name %> </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <!-- inicio tarjeta detalle del producto dentro del modal-->
                        <div class="card mb-3" style="max-width: 540px;">
                          <div class="row g-0">
                            <div class="col-md-4">
                              <img src="<%= card.img %>" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                              <div class="card-body">
                                <h5 class="card-title">Nombre: <%= card.name %></h5>
                                <h6>Fecha de creacion: <%= card.date %> </h6>
                                <p class="card-text"> <%= card.desc %> </p>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="d-flex justify-content-between">
                          <a href=""><i class="fas fa-cart-plus"></i></a>
                          <div>
                          <i class="fas fa-gem mx-1"></i> <%= card.price %> ETH
                          </div>
                          <a href=""><i class="far fa-heart"></i></a>
                        </div>
                      </div>
                       <!-- fin tarjeta detalle del producto dentro del modal-->
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-outline-success">Comprar</button>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- fin modal detalle producto-->
                <div>
                <i class="fas fa-gem mx-1"></i> <%= card.price %> ETH
              </div>
                <a href=""><i class="far fa-heart"></i></a>
              </div>
            </div>
          </div>
           <!-- fin articulo -->
          <% } %>
       
         <!-- fin mas vistos -->

      </section>
    </main>
<!-- fin contenido principal -->



<!-- inicio footer -->

 <%- include("./partials/Footer") %>

<!-- fin footer -->


  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>

  </body>
</html>
